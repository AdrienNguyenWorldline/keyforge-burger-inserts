<div class="decks">
    <div class="grid-x">
        <div class="cell small-9 left-column">
            <div class="print-sheet">
                <BoxInsert @type='side' @name='deck 1'/>
                <BoxInsert @type='side' @name='deck 2'/>
                <BoxInsert @type='side' @name='deck 3'/>
                <BoxInsert @type='side' @name='deck 4'/>
                <BoxInsert @type='side' @name='deck 5'/>
            </div>
        </div>
        <div class="cell small-3 right-column">
            <p class="smallTitle">Printing Options</p>
            <p>
                WIP
            </p>
            <p class="smallTitle">Decks Folders</p>
            {{log "folders" this.folders}}
            <div class="deck-folders-list">
                {{#each @model.folders as |folder|}}
                    <DeckFolder @folder={{folder}}/>
                {{/each}} 
            </div>
            <p class="smallTitle">Import from Decks of Keyforge</p>
            <div>
                <p>Import from DOK csv file</p>
            </div>
        </div>
    </div>
    
</div>