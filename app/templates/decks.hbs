<div class="decks">
  <div class="grid-x">
    <div class="cell small-9 left-column">
      <div class="print-sheet">
        {{#each decksToPrint as |deck|}}
        <BoxInsert @type='side' @deck={{deck}} @printOptions={{printOptions}} />
        {{/each}}
      </div>
    </div>
    <div class="cell small-3 right-column">
      <p class="smallTitle">Printing Options</p>

      <div class="print-option">
        <div class="print-option-label">Show Set</div>
        <div class="switch tiny">
          <Input class="switch-input" id="option-side-showSet" @type="checkbox" name="showSet"
            @checked={{this.sideShowSet}} />
          <label class="switch-paddle" for="option-side-showSet">
            <span class="switch-active" aria-hidden="true">Yes</span>
            <span class="switch-inactive" aria-hidden="true">No</span>
          </label>
        </div>
      </div>

      <p class="smallTitle">Decks Folders</p>
      <div class="deck-folders-list">
        {{#each @model.folders as |folder|}}
        <DeckFolder @folder={{folder}} />
        {{/each}}
      </div>
      <p class="smallTitle">Import Decks Data</p>
      <div>
        <FileUpload @name="dokCsvUpload" @accept="text/csv" @onfileadd={{action 'uploadDokCsv'}} as |queue|>
          <a class="button">
            Load DoK csv file
          </a>
        </FileUpload>
      </div>
    </div>
  </div>

</div>