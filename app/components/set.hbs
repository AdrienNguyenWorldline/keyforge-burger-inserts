<div class="dok-zone-set">
  {{#if this.showSetColor}}
    <svg class="backgroundColor" xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 10'>
      <rect width="100%" height="100%" style={{this.setColor}} />
    </svg>
    <div class="withBackgroundColor">
      {{this.short}}
    </div>
  {{else}}
    <div>
      {{this.short}}
    </div>
  {{/if}}
</div>
